<section id="doctors" class="doctors">
  <div class="container">
    <div class="section-title">
      <h2>Medicii Noștri</h2>
      <p>Echipa noastră de medici specialiști este dedicată furnizării de servicii medicale de cea mai înaltă calitate.</p>
    </div>

    <div class="doctors-slider">
      <div class="doctors-wrapper">
        {
          doctors.map((doctor) => (
            <div class="doctor-card">
              <div class="doctor-img">
                <img src={doctor.image} alt={`Poza ${doctor.name}`} />
              </div>
              <div class="doctor-info">
                <h4>{doctor.name}</h4>
                <span>{doctor.specialty}</span>
                <p>{doctor.description}</p>
              </div>
            </div>
          ))
        }
      </div>
      
      <div class="slider-controls">
        <button id="prevBtn" class="slider-btn" aria-label="Previous doctors">
          <i class="bi bi-chevron-left"></i>
        </button>
        <button id="nextBtn" class="slider-btn" aria-label="Next doctors">
          <i class="bi bi-chevron-right"></i>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const wrapper = document.querySelector('.doctors-wrapper');
  const cards = document.querySelectorAll('.doctor-card');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  
  let currentIndex = 0;
  const cardsToShow = 3;
  const totalCards = cards.length;

  function updateSlider() {
    const offset = -currentIndex * (100 / cardsToShow);
    wrapper.style.transform = `translateX(${offset}%)`;
    
    // Update buttons state
    prevBtn.disabled = currentIndex === 0;
    nextBtn.disabled = currentIndex >= totalCards - cardsToShow;
  }

  prevBtn.addEventListener('click', () => {
    if (currentIndex > 0) {
      currentIndex--;
      updateSlider();
    }
  });

  nextBtn.addEventListener('click', () => {
    if (currentIndex < totalCards - cardsToShow) {
      currentIndex++;
      updateSlider();
    }
  });

  // Initial setup
  updateSlider();
});
</script>

<style>
.doctors {
  padding: 60px 0;
  overflow: hidden;
  background-color: #f8f9fa;
}

.doctors .section-title {
  text-align: center;
  margin-bottom: 40px;
}

.doctors-slider {
  position: relative;
  overflow: hidden;
  padding: 20px 0;
}

.doctors-wrapper {
  display: flex;
  transition: transform 0.5s ease;
  gap: 30px;
  width: calc(33.333% * 5); /* Adjust based on number of doctors */
}

.doctor-card {
  flex: 0 0 calc(33.333% - 20px);
  background: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: all 0.3s ease;
}

.doctor-card:hover {
  transform: translateY(-5px);
}

.doctor-img {
  position: relative;
  overflow: hidden;
}

.doctor-img img {
  width: 100%;
  height: auto;
  transition: all 0.3s ease;
}

.doctor-info {
  padding: 20px;
  text-align: center;
}

.doctor-info h4 {
  font-weight: 700;
  margin-bottom: 5px;
  font-size: 18px;
  color: #2c4964;
}

.doctor-info span {
  display: block;
  font-size: 13px;
  color: #1977cc;
  margin-bottom: 10px;
}

.doctor-info p {
  font-style: italic;
  font-size: 14px;
  line-height: 1.5;
  color: #6b7280;
}

.slider-controls {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  padding: 0 20px;
  pointer-events: none;
}

.slider-btn {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #1977cc;
  border: none;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  pointer-events: auto;
}

.slider-btn:hover {
  background: #166ab5;
}

.slider-btn:disabled {
  background: #ccc;
  cursor: not-allowed;
}

.slider-btn i {
  font-size: 20px;
}

@media (max-width: 991px) {
  .doctor-card {
    flex: 0 0 calc(50% - 15px);
  }
  .doctors-wrapper {
    width: calc(50% * 5);
  }
}

@media (max-width: 768px) {
  .doctor-card {
    flex: 0 0 100%;
  }
  .doctors-wrapper {
    width: 500%;
  }
}
</style>